<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/total_scrollview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"        
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/top_relativelayout_regist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_activity_login_page_top_height"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/layout_phone_number_regist"
                    android:layout_width="@dimen/dialog_activity_regist_top_left_item_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/other_person_gridview_item_selector" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/layout_phone_number_regist_txtview"
                            style="@style/regist_title_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tips_regist_phone_number"
                            android:textColor="@drawable/btn_homepage_title_textcolor" />
                    </LinearLayout>

                    <View
                        android:id="@+id/layout_phone_number_regist_view"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:layout_alignParentBottom="true"
                        android:background="#22b8ff"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/layout_phone_number_regist_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dialog_activity_regist_top_line_margin_top_bottom"
                    android:layout_marginTop="@dimen/dialog_activity_regist_top_line_margin_top_bottom"
                    android:layout_toRightOf="@id/layout_phone_number_regist"
                    android:background="@drawable/tab_indicator_divider" />

                <RelativeLayout
                    android:id="@+id/layout_email_address_regist"
                    android:layout_width="@dimen/dialog_activity_regist_top_left_item_width"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/layout_phone_number_regist_line"
                    android:background="@drawable/other_person_gridview_item_selector" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/layout_email_address_regist_txtview"
                            style="@style/regist_title_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tips_regist_email_address"
                            android:textColor="@drawable/btn_homepage_title_textcolor" />
                    </LinearLayout>

                    <View
                        android:id="@+id/layout_email_address_regist_view"
                        android:layout_width="match_parent"
                        android:layout_height="3dip"
                        android:layout_alignParentBottom="true"
                        android:background="#22b8ff"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dialog_activity_regist_item_top_margin_right_spacing"
                    android:weightSum="3" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="@dimen/dialog_activity_login_regist_top_line_margin_right"
                        android:layout_weight="2"
                        android:gravity="right|center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/dialog_activity_regist_top_line_margin_top_bottom"
                            android:layout_marginTop="@dimen/dialog_activity_regist_top_line_margin_top_bottom"
                            android:background="@drawable/tab_indicator_divider"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/regist_reback_login_page_imageview_width"
                            android:layout_height="@dimen/regist_reback_login_page_imageview_heigth"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="@dimen/regist_top_right_layout_line_margin_right"
                            android:gravity="right|center"
                            android:src="@drawable/detail_card_series_return" />

                        <TextView
                            android:id="@+id/reback_login_page"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right|center"
                            android:gravity="right|center"
                            android:text="@string/login"
                            android:textColor="#888888"
                            android:textSize="@dimen/text_size_5" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/top_divdier_textview_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/myyouku_setting_divider"
                android:layout_below="@id/top_relativelayout_regist"
                android:background="@color/mycenter_setting_divider" />

            <LinearLayout
                android:id="@+id/top_margin_top_layout_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_activity_regist_input_editview_margin_top"
                android:layout_below="@id/top_divdier_textview_line"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/login_edit_magin_left"
                    android:layout_marginTop="@dimen/login_tips_margin_top_register"
                    android:text=" "
                    android:textAppearance="@style/Font3_red_ff5a5a" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/regist_input_area_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_margin_top_layout_view"
                android:orientation="vertical">

                <RelativeLayout
                    android:paddingLeft="@dimen/dialog_activity_login_input_editview_margin_left_right"
            		android:paddingRight="@dimen/dialog_activity_login_input_editview_margin_left_right" 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_activity_login_input_layout_height" >

                    <ImageView
                        android:id="@+id/regist_email_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/register_icon_fork"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <EditText
                            android:id="@+id/regist_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/login_edit_magin_bottom"
                            android:layout_marginLeft="@dimen/login_edit_magin_left"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="@string/regist_user_email_hint"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textColor="@color/text_color_gray_7"
                            android:textColorHint="@color/login_regist_default_text_input"
                            android:textSize="@dimen/text_size_5" />

                        <RelativeLayout
                            android:id="@+id/layout_regist_email_bottom_view"
                            android:layout_width="match_parent"
                            android:layout_height="7px"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/email_left_line"
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentLeft="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:id="@+id/email_right_line"
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentRight="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:id="@+id/email_mid_line"
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_alignParentBottom="true"
                                android:background="#1b96d6" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/user_regist_get_authcode_line"
                            android:layout_width="1px"
                            android:layout_height="6px"
                            android:layout_alignBottom="@id/layout_regist_email_bottom_view"
                            android:layout_marginRight="@dimen/user_forget_password_view_margin_right"
                            android:layout_toLeftOf="@+id/user_regist_get_authcode_textview"
                            android:background="#1b96d6" />

                        <TextView
                            android:id="@+id/user_regist_get_authcode_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/regist_email"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/login_edit_magin_bottom"
                            android:layout_marginRight="@dimen/user_forget_password_view_margin_right"
                            android:text="@string/tips_send_auth_code"
                            android:textColor="#22b8ff"
                            android:textSize="@dimen/login_regist_pswd_txt_text_size" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/regist_tip_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/login_edit_magin_left"
                    android:layout_marginTop="@dimen/login_tips_margin_top_register"
                    android:text=" "
                    android:textAppearance="@style/Font3_red_ff5a5a"
                    android:visibility="gone" />

                <RelativeLayout
                    android:paddingLeft="@dimen/dialog_activity_login_input_editview_margin_left_right"
            		android:paddingRight="@dimen/dialog_activity_login_input_editview_margin_left_right" 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_activity_login_input_layout_height" >

                    <ImageView
                        android:id="@+id/regist_name_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/register_icon_fork"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <EditText
                            android:id="@+id/regist_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/login_edit_magin_bottom"
                            android:layout_marginLeft="@dimen/login_edit_magin_left"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="@string/regist_user_name_hint"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textColor="@color/text_color_gray_7"
                            android:textColorHint="@color/login_regist_default_text_input"
                            android:textSize="@dimen/text_size_5" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="7px"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/name_left_line"
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentLeft="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:id="@+id/name_right_line"
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentRight="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:id="@+id/name_mid_line"
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_alignParentBottom="true"
                                android:background="#1b96d6" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/regist_tip_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/login_edit_magin_left"
                    android:layout_marginTop="@dimen/login_tips_margin_top_register"
                    android:text=" "
                    android:textAppearance="@style/Font3_red_ff5a5a"
                    android:visibility="gone" />

                <RelativeLayout
                    android:paddingLeft="@dimen/dialog_activity_login_input_editview_margin_left_right"
            		android:paddingRight="@dimen/dialog_activity_login_input_editview_margin_left_right" 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_activity_login_input_layout_height" >

                    <ImageView
                        android:id="@+id/regist_pwd1_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/register_icon_fork"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <EditText
                            android:id="@+id/regist_pwd1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/login_edit_magin_bottom"
                            android:layout_marginLeft="@dimen/login_edit_magin_left"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="@string/regist_user_pwd1_hint_text"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="@color/text_color_gray_7"
                            android:textColorHint="@color/login_regist_default_text_input"
                            android:textSize="@dimen/text_size_5" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="7px"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/pass_left_line"
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentLeft="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:id="@+id/pass_right_line"
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentRight="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:id="@+id/pass_mid_line"
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_alignParentBottom="true"
                                android:background="#1b96d6" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="@dimen/activity_myyouku_paddingleft"
                	android:paddingRight="@dimen/activity_myyouku_paddingleft" 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_blue_line_Margin_top"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/regist_pwd2_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/login_blue_line_Margin_right"
                        android:layout_toLeftOf="@id/regist_pwd2_img" >

                        <EditText
                            android:id="@+id/regist_pwd2"
                            style="@style/login_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/login_tips_margin_top_register"
                            android:layout_marginLeft="@dimen/login_edit_magin_left"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="@string/regist_user_pwd2_hint"
                            android:inputType="textPassword" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="7px"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentLeft="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="6px"
                                android:layout_alignParentRight="true"
                                android:background="#1b96d6" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_alignParentBottom="true"
                                android:background="#1b96d6" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/regist_tip_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/login_edit_magin_left"
                        android:layout_marginTop="@dimen/login_tips_margin_top_register"
                        android:text=" "
                        android:textAppearance="@style/Font3_red_ff5a5a" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_regist_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/regist_input_area_layout"
                android:paddingBottom="@dimen/dialog_activity_login_layout_regist_item_spacing"
                android:gravity="bottom"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/user_regist"
                    style="@style/Font6_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_login_btn_height"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_activity_login_button_click"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dialog_activity_login_layout_regist_item_spacing"
                    android:layout_marginRight="@dimen/dialog_activity_login_layout_regist_item_spacing"
                    android:text="@string/register" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/regist_text_margin_top"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/agreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/regist_agreement"
                            android:textColor="#22b8ff"
                            android:textSize="@dimen/login_regist_pswd_txt_text_size" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#22b8ff" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="åŠ"
                        android:textColor="@color/text_color_gray_3"
                        android:textSize="@dimen/login_regist_pswd_txt_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/copyright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/regist_statement"
                            android:textColor="#22b8ff"
                            android:textSize="@dimen/login_regist_pswd_txt_text_size" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#22b8ff" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/homepage_bottom_stack_item_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/bottom_regist_layout"
                android:layout_gravity="bottom"
                android:background="@color/channel_bottom_line_color" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>