<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:horizontalSpacing="@dimen/gridview_spacing"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:paddingLeft="@dimen/gridview_pading_horizontal"
        android:paddingRight="@dimen/gridview_pading_horizontal"
        android:verticalSpacing="@dimen/gridview_spacing" />

    <TextView
        android:id="@+id/tv_local_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/text_size_j"
        android:visibility="gone" />

</LinearLayout>